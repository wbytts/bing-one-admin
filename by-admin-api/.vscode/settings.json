{
  // 自动保存
  "files.autoSave": "afterDelay",
  // 保存自动格式化
  "editor.formatOnSave": true,
  // 鼠标滚轮缩放
  "editor.mouseWheelZoom": true,
  // 关闭编辑器小地图
  "editor.minimap.enabled": false,
  "prettier.requireConfig": true,
  "prettier.configPath": "./prettier.config.cjs",
  "eslint.enable": true,
  "eslint.format.enable": true
}
